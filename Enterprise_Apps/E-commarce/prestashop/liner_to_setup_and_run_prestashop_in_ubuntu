 getphp && sudo apt install -y apache2 mysql-server php libapache2-mod-php php-mysql && sudo mysql -e "CREATE DATABASE prestashop;" && sudo wget https://download.prestashop.com/download/releases/prestashop_1.7.7.8.zip && sudo unzip prestashop_1.7.7.8.zip -d /var/www/html/prestashop && sudo chown -R www-data:www-data /var/www/html/prestashop && sudo systemctl restart apache2 && gc  http://localhost/prestashop
