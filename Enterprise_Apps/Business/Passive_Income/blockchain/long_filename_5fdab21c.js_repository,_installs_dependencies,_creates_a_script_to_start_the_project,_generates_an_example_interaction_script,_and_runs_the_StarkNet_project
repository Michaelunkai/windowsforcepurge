sudo apt install -y git curl && curl -fsSL https://deb.nodesource.com/setup_lts.x | sudo -E bash - && sudo apt-get install -y nodejs && git clone https://github.com/starknet-io/starknet.js.git && cd starknet.js && npm install && echo -e '#!/bin/bash\n# Script to start the StarkNet.js project\nnpm run start' > start_starknetjs_project.sh && chmod +x start_starknetjs_project.sh && echo -e '// Example script to interact with StarkNet\nconst { Provider } = require("starknet");\n(async () => {\n  const provider = new Provider({ sequencer: { network: "goerli-alpha" } });\n  const block = await provider.getBlock("latest");\n  console.log(block);\n})();' > examples/interact_with_starknet.js && npm run bulid
