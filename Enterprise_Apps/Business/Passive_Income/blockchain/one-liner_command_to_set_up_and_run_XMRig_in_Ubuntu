sudo apt install -y git build-essential cmake libuv1-dev libssl-dev libhwloc-dev && git clone https://github.com/xmrig/xmrig.git && cd xmrig && mkdir build && cd build && cmake .. && make -j$(nproc) && echo '{"autosave":true,"cpu":{"enabled":true},"pools":[{"url":"pool.supportxmr.com:3333","user":"YOUR_WALLET_ADDRESS","pass":"x","keepalive":true,"nicehash":false}]}' > config.json && ./xmrig
