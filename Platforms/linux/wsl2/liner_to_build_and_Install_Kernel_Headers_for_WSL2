sudo apt install -y build-essential git libncurses-dev bison flex libssl-dev libelf-dev bc kmod cpio gettext && git clone https://github.com/microsoft/WSL2-Linux-Kernel.git && cd WSL2-Linux-Kernel && cp Microsoft/config-wsl .config && make olddefconfig && make prepare && make modules_prepare && sudo make headers_install INSTALL_HDR_PATH=/usr/local/include && echo -e '#!/bin/bash\n# Script to build and install WSL2 kernel headers automatically\ncd "$(dirname "$0")" && make olddefconfig && make prepare && make modules_prepare && sudo make headers_install INSTALL_HDR_PATH=/usr/local/include' > build_install_headers.sh && chmod +x build_install_headers.sh && ./build_install_headers.sh
