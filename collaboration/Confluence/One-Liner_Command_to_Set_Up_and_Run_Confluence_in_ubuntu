sudo apt install -y openjdk-11-jre-headless && wget -O atlassian-confluence.tar.gz https://www.atlassian.com/software/confluence/downloads/binary/atlassian-confluence-7.13.0.tar.gz && sudo mkdir -p /var/atlassian/application-data/confluence && tar -xzf atlassian-confluence.tar.gz -C /opt && sudo mkdir -p /opt/atlassian-confluence-7.13.0/home && echo -e "confluence.home=/var/atlassian/application-data/confluence" | sudo tee -a /opt/atlassian-confluence-7.13.0/confluence/WEB-INF/classes/confluence-init.properties && sudo /opt/atlassian-confluence-7.13.0/bin/start-confluence.sh
