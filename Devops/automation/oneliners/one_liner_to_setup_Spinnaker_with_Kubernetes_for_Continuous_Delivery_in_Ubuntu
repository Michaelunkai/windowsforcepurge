sudo apt update && sudo apt install -y docker.io && sudo usermod -aG docker $USER && sudo snap install helm --classic && sudo snap install kubectl --classic && curl -LO "https://storage.googleapis.com/kubernetes-release/release/$(curl -s https://storage.googleapis.com/kubernetes-release/release/stable.txt)/bin/linux/amd64/kubectl" && chmod +x ./kubectl && sudo mv ./kubectl /usr/local/bin/kubectl && curl -s https://get.helm.sh/helm-v3.6.3-linux-amd64.tar.gz | tar xz -C /tmp && sudo mv /tmp/linux-amd64/helm /usr/local/bin/helm && curl -LO https://storage.googleapis.com/spinnaker-artifacts/spin/latest/release/linux/amd64/spin && chmod +x ./spin && sudo mv ./spin /usr/local/bin/spin && curl -fsSL https://get.pulumi.com | sh && export PATH=$PATH:$HOME/.pulumi/bin && exec $SHELL && kubectl create ns spinnaker && helm repo add spinnaker https://charts.helm.sh/stable && helm repo update && helm install spinnaker spinnaker/spinnaker --namespace spinnaker
