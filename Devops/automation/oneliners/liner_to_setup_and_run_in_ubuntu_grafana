sudo apt update && sudo apt install -y wget apt-transport-https software-properties-common && wget -q -O - https://packages.grafana.com/gpg.key | sudo apt-key add - && echo "deb https://packages.grafana.com/oss/deb stable main" | sudo tee /etc/apt/sources.list.d/grafana.list && sudo apt update && sudo apt install -y grafana && sudo service grafana-server start && echo "Grafana running at http://localhost:3000"
