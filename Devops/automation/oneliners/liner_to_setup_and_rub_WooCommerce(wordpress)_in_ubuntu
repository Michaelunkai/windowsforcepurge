sudo apt install -y apache2 mysql-server php libapache2-mod-php php-mysql && sudo mysql -e "CREATE DATABASE wordpress;" && sudo wget https://wordpress.org/latest.tar.gz && sudo tar -xvzf latest.tar.gz && sudo mv wordpress /var/www/html/wordpress && sudo chown -R www-data:www-data /var/www/html/wordpress && sudo systemctl restart apache2 && echo "WooCommerce (WordPress) is running at http://localhost/wordpress"
