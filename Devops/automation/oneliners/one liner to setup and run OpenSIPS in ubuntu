sudo apt-get update && sudo apt-get install -y build-essential libssl-dev libncurses5-dev libmysqlclient-dev bison flex git && git clone https://github.com/OpenSIPS/opensips.git && cd opensips && make menuconfig && make all && sudo make install && sudo groupadd opensips && sudo useradd -M -s /usr/sbin/nologin -g opensips opensips && sudo cp packaging/systemd/opensips.service /etc/systemd/system/ && sudo systemctl daemon-reload && sudo systemctl enable opensips && sudo mkdir -p /usr/local/etc/opensips && sudo cp /usr/local/share/opensips/default-config/opensips.cfg /usr/local/etc/opensips/ && sudo opensipsdbctl create && sudo systemctl start opensips && sudo systemctl status opensips && echo "OpenSIPS successfully installed and running. Visit https://www.opensips.org/ for more details."
