echo -e '#!/bin/bash\n\n# Add correct Cassandra repository\necho "deb [arch=amd64] https://debian.cassandra.apache.org 40x main" | tee -a /etc/apt/sources.list.d/cassandra.sources.list\n\n# Add GPG key\ncurl https://downloads.apache.org/cassandra/KEYS | tee /etc/apt/trusted.gpg.d/cassandra.asc\n\n# Update package lists\napt-get update\n\n# Install Cassandra\napt-get install -y cassandra\n\n# Start Cassandra service\nsystemctl start cassandra\n\n# Check Cassandra status\nsystemctl status cassandra\n\n# Confirm installation\necho "Apache Cassandra installed and running."' > /usr/local/bin/install_cassandra_apache_debian_correct_repository.sh && chmod +x /usr/local/bin/install_cassandra_apache_debian_correct_repository.sh && /usr/local/bin/install_cassandra_apache_debian_correct_repository.sh
