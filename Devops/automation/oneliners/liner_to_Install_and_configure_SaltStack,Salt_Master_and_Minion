sudo apt-get install -y curl && curl -fsSL https://repo.saltproject.io/py3/ubuntu/20.04/amd64/latest/SALTSTACK-GPG-KEY.pub | sudo apt-key add - && echo "deb http://repo.saltproject.io/py3/ubuntu/20.04/amd64/latest focal main" | sudo tee /etc/apt/sources.list.d/saltstack.list && sudo apt-get update && sudo apt-get install -y salt-master salt-minion && sudo sed -i 's/#interface: 0.0.0.0/interface: 127.0.0.1/' /etc/salt/master && sudo systemctl restart salt-master && sudo systemctl enable salt-master && sudo sed -i 's/#master: salt/master: 127.0.0.1/' /etc/salt/minion && sudo systemctl restart salt-minion && sudo systemctl enable salt-minion
