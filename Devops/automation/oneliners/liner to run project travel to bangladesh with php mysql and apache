 git clone https://github.com/moinul7002/Online-Tour-and-Travels.git && cd Online-Tour-and-Travels  && getapache && getmysql && apt install unzip -y && getphp && sudo mysql -e "CREATE DATABASE online_tour_and_travel; CREATE USER 'tour_user'@'localhost' IDENTIFIED BY 'secure_password'; GRANT ALL PRIVILEGES ON online_tour_and_travel.* TO 'tour_user'@'localhost'; FLUSH PRIVILEGES;" && mysql -u tour_user -p'secure_password' online_tour_and_travel < database/tourism.sql && echo "<?php \$servername='localhost'; \$username='tour_user'; \$password='secure_password'; \$dbname='online_tour_and_travel'; \$conn=new mysqli(\$servername, \$username, \$password, \$dbname); if (\$conn->connect_error) {die('Connection failed: ' . \$conn->connect_error);}" > connection.php && sudo cp -r * /var/www/html/ && sudo chown -R www-data:www-data /var/www/html/ && sudo chmod -R 755 /var/www/html/ && sudo systemctl restart apache2 &&  gc http://localhost/index.php
