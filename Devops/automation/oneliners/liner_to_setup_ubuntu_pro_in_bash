sudo apt update && sudo apt upgrade -y && sudo apt install ubuntu-advantage-tools -y && pro --version && echo "Visit https://ubuntu.com/pro to generate your Ubuntu Pro token" && read -p "Enter your Ubuntu Pro token: " TOKEN && sudo pro attach $TOKEN && sudo pro enable && sudo pro enable esm-apps && sudo pro enable esm-infra && sudo pro enable livepatch && sudo pro status && echo -e 'APT::Periodic::Update-Package-Lists "1";\nAPT::Periodic::Unattended-Upgrade "1";' | sudo tee /etc/apt/apt.conf.d/20auto-upgrades > /dev/null && wsl --shutdown && echo "Ubuntu Pro setup completed successfully. Restart your WSL2 instance."
