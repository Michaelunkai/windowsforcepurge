"cd && wget https://dl.pstmn.io/download/latest/linux -O postman-linux-x64.tar.gz && tar -xzf postman-linux-x64.tar.gz -C ~/ && sudo mv ~/Postman /opt && sudo ln -s /opt/Postman/Postman /usr/local/bin/postman && echo '[Desktop Entry]\nEncoding=UTF-8\nName=Postman\nExec=postman\nIcon=/opt/Postman/app/resources/app/assets/icon.png\nTerminal=false\nType=Application\nCategories=Development;' | sudo tee /usr/share/applications/postman.desktop && postman"
