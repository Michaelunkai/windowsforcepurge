sudo apt update && sudo apt install -y neomutt && echo -e "set realname = \"Your Name\"\nset from = \"your_email@example.com\"\nset smtp_url = \"smtp://smtp.yourprovider.com:587/\" \nset smtp_pass = \"your_password\"\nset imap_user = \"your_email@example.com\"\nset imap_pass = \"your_password\"\nset folder = \"imaps://imap.yourprovider.com/\"\nset spoolfile = \"+INBOX\"" > ~/.neomuttrc && neomutt
