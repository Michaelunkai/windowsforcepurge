sudo apt-get update && sudo apt-get install curl -y && cd /tmp && curl -O https://repo.anaconda.com/archive/Anaconda3-2020.11-Linux-x86_64.sh && bash Anaconda3-2020.11-Linux-x86_64.sh -b && export PATH=$HOME/anaconda3/bin:$PATH && source ~/.bashrc && conda -V && conda update conda -y && conda update anaconda -y && conda create --name My_env1 python=3 -y && conda activate My_env1 && echo "To deactivate the environment, run: conda deactivate"
