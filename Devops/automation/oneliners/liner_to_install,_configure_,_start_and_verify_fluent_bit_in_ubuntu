sudo apt-get update && sudo apt-get install -y curl apt-transport-https && curl -s https://packages.fluentbit.io/fluentbit.key | sudo apt-key add - && echo "deb https://packages.fluentbit.io/ubuntu/focal focal main" | sudo tee /etc/apt/sources.list.d/fluentbit.list && sudo apt-get update && wget http://archive.ubuntu.com/ubuntu/pool/main/o/openssl/libssl1.1_1.1.1f-1ubuntu2_amd64.deb && sudo dpkg -i libssl1.1_1.1.1f-1ubuntu2_amd64.deb && sudo apt-get install -y td-agent-bit && echo -e "[SERVICE]\n    Flush         1\n    Log_Level     info\n    Parsers_File  parsers.conf\n\n[INPUT]\n    Name          tail\n    Path          /var/log/syslog\n    Parser        syslog\n\n[OUTPUT]\n    Name          stdout\n    Match         *" | sudo tee /etc/td-agent-bit/td-agent-bit.conf && sudo systemctl start td-agent-bit && sudo systemctl enable td-agent-bit && sudo systemctl status td-agent-bit
