update && getqemu && curl -LO https://stable.release.flatcar-linux.net/amd64-usr/current/flatcar_production_qemu_image.img.bz2 && bunzip2 flatcar_production_qemu_image.img.bz2 && echo "Flatcar downloaded, ready for VM setup" && qemu-system-x86_64 -hda flatcar_production_qemu_image.img -m 1024 -enable-kvm
