sudo apt install -y unzip && sudo mkdir -p /opt/glowroot && cd /opt/glowroot && sudo wget -c https://github.com/glowroot/glowroot/releases/download/v0.14.2/glowroot-0.14.2-dist.zip -O glowroot.zip && sudo unzip -o glowroot.zip && sudo chown -R $(whoami):$(whoami) /opt/glowroot && echo "export PATH=\$PATH:/opt/glowroot/glowroot" >> ~/.bashrc && source ~/.bashrc && java -javaagent:/opt/glowroot/glowroot/glowroot.jar
