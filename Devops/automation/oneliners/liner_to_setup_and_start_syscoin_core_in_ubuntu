 wget https://github.com/syscoin/syscoin/releases/download/v4.3.0/syscoin-4.3.0-x86_64-linux-gnu.tar.gz && tar -xzf syscoin-4.3.0-x86_64-linux-gnu.tar.gz && sudo mv syscoin-4.3.0/bin/* /usr/local/bin/ && mkdir ~/.syscoin && echo -e "rpcuser=your_rpc_username\nrpcpassword=your_rpc_password\nrpcallowip=127.0.0.1\nserver=1\nlisten=1\ndaemon=1\nstaking=1" > ~/.syscoin/syscoin.conf && syscoind -daemon
