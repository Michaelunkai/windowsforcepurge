sudo apt install -y dirmngr gnupg apt-transport-https ca-certificates software-properties-common && wget -qO- https://cloud.r-project.org/bin/linux/ubuntu/marutter_pubkey.asc | sudo tee -a /etc/apt/trusted.gpg.d/cran_ubuntu_key.asc && yes '' | sudo add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu $(lsb_release -cs)-cran40/' && sudo apt install -y r-base && R --version
