echo 'export GEODE_HOME=/opt/geode && export PATH=$PATH:$GEODE_HOME/bin' >> ~/.bashrc && source ~/.bashrc && wget https://dlcdn.apache.org/geode/1.15.1/apache-geode-1.15.1.tgz && tar -xzf apache-geode-1.15.1.tgz && sudo mv apache-geode-1.15.1 /opt/geode && echo "start locator --name=locator1\nstart server --name=server1\ncreate region --name=example-region --type=PARTITION\nput --key=1 --value=\"Sample Value\" --region=example-region\nget --key=1 --region=example-region\n" > /opt/geode/geode-setup-script.gfsh && echo '#!/bin/bash\nsource ~/.bashrc\n/opt/geode/bin/gfsh -e "run --file=/opt/geode/geode-setup-script.gfsh"' > /opt/geode/run-geode.sh && chmod +x /opt/geode/run-geode.sh && /opt/geode/run-geode.sh
