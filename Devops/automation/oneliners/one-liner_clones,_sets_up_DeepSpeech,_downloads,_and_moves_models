cd && git clone https://github.com/mozilla/DeepSpeech.git && cd DeepSpeech && python3 -m venv venv && source venv/bin/activate && pip install --upgrade pip && nano requirements.txt && echo -e "tensorflow==2.17.0\nsox\nnumpy\nprogressbar2\nscipy\nwebrtcvad" > requirements.txt && pip install -r requirements.txt && mkdir -p models && curl -LO https://github.com/mozilla/DeepSpeech/releases/download/v0.9.3/deepspeech-0.9.3-models.pbmm && curl -LO https://github.com/mozilla/DeepSpeech/releases/download/v0.9.3/deepspeech-0.9.3-models.scorer && mv deepspeech-0.9.3-models.pbmm deepspeech-0.9.3-models.scorer models/
