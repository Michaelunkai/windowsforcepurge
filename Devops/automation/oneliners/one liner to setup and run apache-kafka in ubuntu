sudo apt update && sudo apt install -y default-jre zookeeperd && wget https://downloads.apache.org/kafka/2.8.0/kafka_2.13-2.8.0.tgz && tar -xzf kafka_2.13-2.8.0.tgz && cd kafka_2.13-2.8.0 && bin/zookeeper-server-start.sh config/zookeeper.properties & bin/kafka-server-start.sh config/server.properties
