 sudo apt update && sudo apt install squid -y && sudo cp /etc/squid/squid.conf /etc/squid/squid.conf.bak && sudo sed -i 's/^#acl localnet src/acl localnet src/' /etc/squid/squid.conf && sudo sed -i 's/^#http_access allow localnet/http_access allow localnet/' /etc/squid/squid.conf && sudo sed -i 's/^#http_port 3128/http_port 3128/' /etc/squid/squid.conf && sudo systemctl restart squid && gc http://localhost:3128
