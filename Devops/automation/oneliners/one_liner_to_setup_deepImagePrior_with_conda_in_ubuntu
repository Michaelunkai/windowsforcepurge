sudo apt-get update && sudo apt-get install curl -y && cd /tmp && curl -O https://repo.anaconda.com/archive/Anaconda3-2020.11-Linux-x86_64.sh && bash Anaconda3-2020.11-Linux-x86_64.sh -b && export PATH=$HOME/anaconda3/bin:$PATH && source ~/.bashrc && conda -V && conda update conda -y && conda update anaconda -y && conda create --name My_env1 python=3 -y && conda activate My_env1 && echo "To deactivate the environment, run: conda deactivate" && sudo apt-get install -y python3 python3-pip conda && git clone https://github.com/DmitryUlyanov/deep-image-prior.git && cd deep-image-prior && conda env create -f environment.yml && conda activate deep-image-prior && python3 -c "from models import *; print('Deep Image Prior setup complete')"
