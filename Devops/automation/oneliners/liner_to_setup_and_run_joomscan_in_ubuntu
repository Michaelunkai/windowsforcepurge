echo -e '#!/bin/bash\nsudo apt install -y git perl libwww-perl libio-socket-ssl-perl && git clone https://github.com/OWASP/joomscan.git && cd joomscan && perl joomscan.pl -u https://example.com' > joomscan_installer_with_tools_used_for_vulnerability_scan.sh && chmod +x joomscan_installer_with_tools_used_for_vulnerability_scan.sh && ./joomscan_installer_with_tools_used_for_vulnerability_scan.sh
