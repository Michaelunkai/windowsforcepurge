 echo -e '#!/bin/bash\nmkdir -p /opt/RavenDB\ncurl -L https://daily-builds.s3.amazonaws.com/RavenDB-5.2.3-linux-x64.tar.bz2 -o /opt/RavenDB/ravendb.tar.bz2\ntar -xvf /opt/RavenDB/ravendb.tar.bz2 -C /opt/RavenDB\napt-get install -y libssl3 libssl-dev\nwget http://archive.ubuntu.com/ubuntu/pool/main/o/openssl1.0/libssl1.0.0_1.0.2n-1ubuntu5_amd64.deb && dpkg -i libssl1.0.0_1.0.2n-1ubuntu5_amd64.deb\ncat <<EOL > /opt/RavenDB/RavenDB/Server/settings.json\n{\n  \"ServerUrl\": \"http://127.0.0.1:8080\",\n  \"DataDir\": \"/var/lib/ravendb/data\",\n  \"LogsDir\": \"/var/log/ravendb\"\n}\nEOL\nchmod +x /opt/RavenDB/RavenDB/Server/Raven.Server\n/opt/RavenDB/RavenDB/Server/Raven.Server --non-interactive --log-to-console &\ncmd.exe /c start chrome http://localhost:8080\n' > setup_ravendb_with_dependencies_and_tool_in_ubuntu.sh && bash setup_ravendb_with_dependencies_and_tool_in_ubuntu.sh
