 sudo apt update && sudo apt install -y qemu-kvm libvirt-daemon-system libvirt-clients bridge-utils virt-manager git python3-pip dmg2img && git clone https://github.com/kholia/OSX-KVM.git && cd OSX-KVM && pip3 install click requests && echo 6 | ./fetch-macOS-v2.py && dmg2img BaseSystem.dmg BaseSystem.img && qemu-img create -f qcow2 mac_hdd_ng.img 64G && ./OpenCore-Boot.sh && sudo qemu-system-x86_64 -enable-kvm -cpu Penryn,vendor=GenuineIntel,kvm=off -machine q35,accel=kvm -smp 4,cores=2 -m 8192 -device isa-applesmc,osk="insert-your-OSK-here" -device usb-kbd -device usb-mouse -device ich9-intel-hda -device hda-duplex -device ich9-ahci,id=sata -drive id=OpenCore,if=none,snapshot=on,format=qcow2,file=OpenCore.qcow2 -device ide-hd,bus=sata.2,drive=OpenCore -drive id=InstallMedia,if=none,file=BaseSystem.img,format=raw -device ide-hd,bus=sata.3,drive=InstallMedia -drive id=MacHDD,if=none,file=mac_hdd_ng.img,format=qcow2 -device ide-hd,bus=sata.4,drive=MacHDD -monitor stdio -vga qxl -device ich9-usb-ehci1,id=usb -device ich9-usb-uhci1,masterbus=usb.0,firstport=0 -device ich9-usb-uhci2,masterbus=usb.0,firstport=2 -device ich9-usb-uhci3,masterbus=usb.0,firstport=4 -netdev user,id=net0 -device e1000-82545em,netdev=net0 -boot menu=on
