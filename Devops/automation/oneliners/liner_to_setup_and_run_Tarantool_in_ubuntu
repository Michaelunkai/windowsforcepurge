curl -s https://download.tarantool.org/tarantool/2x/gpgkey | sudo apt-key add - && echo -e "deb https://download.tarantool.org/tarantool/2x/ubuntu/ $(lsb_release -c -s) main\ndeb-src https://download.tarantool.org/tarantool/2x/ubuntu/ $(lsb_release -c -s) main" | sudo tee /etc/apt/sources.list.d/tarantool_2x.list && sudo apt-get update && sudo apt-get install -y tarantool && tarantool -e "box.cfg{} box.schema.space.create('test_space') box.space.test_space:create_index('primary', {type = 'hash', parts = {1, 'unsigned'}}) box.space.test_space:insert{1, 'First entry'} box.space.test_space:insert{2, 'Second entry'} box.space.test_space:select{}"
