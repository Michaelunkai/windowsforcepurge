sudo apt update && sudo apt install -y openjdk-11-jdk zookeeperd && wget https://downloads.apache.org/bookkeeper/bookkeeper-4.17.1/bookkeeper-server-4.17.1-bin.tar.gz && tar -xzf bookkeeper-server-4.17.1-bin.tar.gz && sudo mv bookkeeper-server-4.17.1 /opt/bookkeeper && echo 'export BOOKKEEPER_HOME=/opt/bookkeeper' >> ~/.bashrc && echo 'export PATH=$PATH:$BOOKKEEPER_HOME/bin' >> ~/.bashrc && source ~/.bashrc && sudo nano /etc/zookeeper/conf/zoo.cfg && sudo systemctl start zookeeper && sudo systemctl enable zookeeper && nano /opt/bookkeeper/conf/bk_server.conf && sudo mkdir -p /opt/bookkeeper/{journal,ledgers,indexes} && sudo chown -R $(whoami) /opt/bookkeeper && bookkeeper shell metaformat -nonInteractive && bookkeeper bookie
