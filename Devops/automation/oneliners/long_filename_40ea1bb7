  cd &&  git clone https://github.com/DeepRNN/image_captioning.git && cd image_captioning && venv && pip install tensorflow numpy opencv-python nltk pandas matplotlib tqdm && python -m nltk.downloader punkt && mkdir -p train/images val/images && wget http://images.cocodataset.org/zips/train2014.zip -O train2014.zip && apt install unzip -y && unzip train2014.zip  -d train/images/ && wget http://images.cocodataset.org/zips/val2014.zip -O val2014.zip && unzip val2014.zip -d val/images/ && wget http://images.cocodataset.org/annotations/annotations_trainval2014.zip -O annotations_trainval2014.zip && unzip annotations_trainval2014.zip && mv annotations/captions_train2014.json train/ && mv annotations/captions_val2014.json val/ && wget https://www.cs.toronto.edu/~frossard/vgg16/vgg16_weights.npz -O vgg16_no_fc.npy && wget https://github.com/fchollet/deep-learning-models/releases/download/v0.2/resnet50_weights_tf_dim_ordering_tf_kernels.h5 -O resnet50.h5
