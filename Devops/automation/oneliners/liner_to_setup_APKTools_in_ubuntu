cd ~ && mkdir -p apktool apkfiles decompiled_apk recompiled_apk && cd ~/apktool && wget https://raw.githubusercontent.com/iBotPeaches/Apktool/master/scripts/linux/apktool && wget https://github.com/iBotPeaches/Apktool/releases/download/v2.8.1/apktool_2.8.1.jar -O apktool.jar && chmod +x apktool && sudo mv apktool /usr/local/bin/ && sudo mv apktool.jar /usr/local/bin/ && sudo ln -s /usr/local/bin/apktool.jar /usr/local/bin/apktool.jar && apktool -version
