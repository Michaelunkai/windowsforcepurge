curl -sSL "https://github.com/buildpacks/pack/releases/latest/download/pack-v0.36.0-linux.tgz" | tar -C /usr/local/bin/ -xzv pack && git clone https://github.com/buildpacks/samples.git && cd samples/apps/java-maven && /usr/local/bin/pack build sample-app --builder paketobuildpacks/builder:base && docker run --rm -p 5555:8080 sample-app && echo "Application is running at: http://localhost:5555"
