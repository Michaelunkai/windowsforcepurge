getjava && wget https://archive.apache.org/dist/spark/spark-3.3.2/spark-3.3.2-bin-hadoop3.tgz &&  tar -xvzf spark-3.3.2-bin-hadoop3.tgz && sudo mv spark-3.3.2-bin-hadoop3 /opt/spark && echo -e "export SPARK_HOME=/opt/spark\nexport PATH=\$PATH:\$SPARK_HOME/bin:\$SPARK_HOME/sbin" >> /root/.bashrc && brc2 &&  spark-shell
