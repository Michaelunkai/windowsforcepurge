sudo apt update && sudo apt install -y cmake make gcc g++ flex bison libpcap-dev libssl-dev python3-dev swig zlib1g-dev libmaxminddb-dev wget && wget https://download.zeek.org/zeek-5.0.0.tar.gz && tar -xvzf zeek-5.0.0.tar.gz && cd zeek-5.0.0 && mkdir build && cd build && cmake .. && make -j$(nproc) && sudo make install && echo 'export PATH=/usr/local/zeek/bin:$PATH' >> ~/.bashrc && source ~/.bashrc && zeek --version && sudo zeek -i eth0
