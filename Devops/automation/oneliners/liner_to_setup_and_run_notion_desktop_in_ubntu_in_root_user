 sudo apt install gdebi-core wget -y && wget https://github.com/valin4tor/notion-linux/releases/download/v2.0.6-windows/notion-desktop_2.0.6_amd64.deb -O notion-desktop_2.0.6_amd64.deb && sudo gdebi -n notion-desktop_2.0.6_amd64.deb && sudo mkdir -p /usr/lib/notion-desktop/resources/ && echo "version: 2.0.6" | sudo tee /usr/lib/notion-desktop/resources/app-update.yml && notion-desktop --no-sandbox
