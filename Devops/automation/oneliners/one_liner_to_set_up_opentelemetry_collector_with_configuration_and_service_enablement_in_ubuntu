sudo apt-get update && sudo apt-get install -y wget && wget https://github.com/open-telemetry/opentelemetry-collector-releases/releases/download/v0.114.0/otelcol_0.114.0_linux_amd64.deb && sudo dpkg -i otelcol_0.114.0_linux_amd64.deb && echo "receivers:\n  otlp:\n    protocols:\n      grpc:\n      http:\nprocessors:\n  batch:\nexporters:\n  logging:\n    loglevel: debug\nservice:\n  pipelines:\n    traces:\n      receivers: [otlp]\n      processors: [batch]\n      exporters: [logging]" | sudo tee /etc/otelcol/config.yaml > /dev/null && sudo systemctl start otelcol && sudo systemctl enable otelcol && sudo systemctl status otelcol
