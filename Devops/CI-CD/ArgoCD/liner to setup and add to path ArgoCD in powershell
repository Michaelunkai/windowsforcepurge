$version = (Invoke-RestMethod https://api.github.com/repos/argoproj/argo-cd/releases/latest).tag_name; $url = "https://github.com/argoproj/argo-cd/releases/download/" + $version + "/argocd-windows-amd64.exe"; $output = "argocd.exe"; Invoke-WebRequest -Uri $url -OutFile $output; [Environment]::SetEnvironmentVariable("Path", "$env:Path;$pwd", "User"); .\argocd.exe version; ./argocd.exe
