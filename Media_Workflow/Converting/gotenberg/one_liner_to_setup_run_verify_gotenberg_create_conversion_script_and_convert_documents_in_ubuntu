docker run -d --name gotenberg -p 3000:3000 gotenberg/gotenberg:latest && curl http://localhost:3000 && echo -e '#!/bin/bash\nINPUT_FILE=$1\nOUTPUT_FILE="${INPUT_FILE%.md}.pdf"\nif ! curl -s http://localhost:3000 > /dev/null; then\n    echo "Gotenberg is not running. Start it with: docker start gotenberg"\n    exit 1\nfi\ncurl -X POST http://localhost:3000/forms/chromium/convert/html -F "files=@${INPUT_FILE};filename=index.html" --output "${OUTPUT_FILE}"\necho "Conversion complete: ${OUTPUT_FILE}"' > convert_to_pdf.sh && chmod +x convert_to_pdf.sh && ./convert_to_pdf.sh test.md
