sudo add-apt-repository ppa:ondrej/php -y && sudo apt update && sudo apt install -y php8.2 php8.2-cli php8.2-mbstring php8.2-xml php8.2-bcmath php8.2-odbc php8.2-curl php8.2-dev php8.2-sqlite3 php-pear git curl unzip && sudo pecl uninstall sqlsrv pdo_sqlsrv && sudo pecl install sqlsrv pdo_sqlsrv && sudo mkdir -p /usr/lib/php/20220829/ && sudo ln -s $(php-config --extension-dir)/sqlsrv.so /usr/lib/php/20220829/sqlsrv.so && sudo ln -s $(php-config --extension-dir)/pdo_sqlsrv.so /usr/lib/php/20220829/pdo_sqlsrv.so && echo "extension=sqlsrv.so" | sudo tee -a /etc/php/8.2/cli/php.ini /etc/php/8.2/apache2/php.ini && echo "extension=pdo_sqlsrv.so" | sudo tee -a /etc/php/8.2/cli/php.ini /etc/php/8.2/apache2/php.ini && curl -sS https://getcomposer.org/installer | php && sudo mv composer.phar /usr/local/bin/composer && git clone https://github.com/laravel/laravel.git ~/laravel && cd ~/laravel && composer install && cp .env.example .env && php artisan key:generate && sed -i "s/DB_CONNECTION=mysql/DB_CONNECTION=sqlsrv/g" .env && sed -i "s/DB_HOST=127.0.0.1/DB_HOST=localhost/g" .env && sed -i "s/DB_DATABASE=homestead/DB_DATABASE=your_database_name/g" .env && sed -i "s/DB_USERNAME=homestead/DB_USERNAME=your_username/g" .env && sed -i "s/DB_PASSWORD=secret/DB_PASSWORD=your_password/g" .env && php artisan migrate && php artisan serve
