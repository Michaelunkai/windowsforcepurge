{
  "manifest_version": 3,
  "name": "ChatGPT Speech-to-Text",
  "version": "1.0",
  "description": "Adds a microphone button to ChatGPT's web UI for speech-to-text functionality.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://chat.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
