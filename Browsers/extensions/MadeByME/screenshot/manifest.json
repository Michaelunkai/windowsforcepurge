// manifest.json
{
  "manifest_version": 3,
  "name": "Webpage Screenshot Saver",
  "version": "1.0",
  "description": "Take a screenshot of the current webpage and save it to a specific folder.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}

