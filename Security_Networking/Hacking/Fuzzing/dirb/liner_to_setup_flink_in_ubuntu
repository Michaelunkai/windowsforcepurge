sudo apt install -y openjdk-11-jdk curl wget unzip && wget https://archive.apache.org/dist/flink/flink-1.17.1/flink-1.17.1-bin-scala_2.12.tgz && tar -xvzf flink-1.17.1-bin-scala_2.12.tgz && sudo mv flink-1.17.1 /usr/local/flink && { echo "export FLINK_HOME=/usr/local/flink"; echo 'export PATH=$PATH:$FLINK_HOME/bin'; } >> ~/.bashrc && source ~/.bashrc && /usr/local/flink/bin/start-cluster.sh
