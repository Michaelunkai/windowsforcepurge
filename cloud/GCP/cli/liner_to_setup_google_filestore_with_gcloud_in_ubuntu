mkdir -p ~/google_filestore && cd ~/google_filestore && echo -e '#!/bin/bash\n\n# Install gcloud SDK\ncurl -sSL https://sdk.cloud.google.com | bash -s -- --disable-prompts\n\n# Initialize gcloud with default settings\ngcloud init --skip-diagnostics --console-only < <(echo "1\n\n")\n\n# Authenticate with service account (replace with your key file path)\nexport GOOGLE_APPLICATION_CREDENTIALS="$HOME/google-filestore-key.json"\ngcloud auth activate-service-account --key-file="$GOOGLE_APPLICATION_CREDENTIALS"\n\n# Create a Filestore instance\ngcloud filestore instances create my-filestore --zone=us-central1-a --tier=STANDARD --file-share=name="vol1",capacity=1TB --network=name="default"\n\n# Install NFS client\nsudo apt-get install -y nfs-common\n\n# Mount the Filestore instance (replace with actual IP and mount path)\nsudo mkdir -p /mnt/google_filestore\nsudo mount -t nfs [INSTANCE_IP_ADDRESS]:/vol1 /mnt/google_filestore\n\n# Verify mount\nmount | grep google_filestore' > setup_google_filestore.sh && chmod +x setup_google_filestore.sh && ./setup_google_filestore.sh
