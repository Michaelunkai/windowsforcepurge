sudo apt-get update && sudo apt-get install -y build-essential libseccomp-dev pkg-config squashfs-tools cryptsetup curl && wget https://dl.google.com/go/go1.23.0.linux-amd64.tar.gz && sudo tar -C /usr/local -xzf go1.23.0.linux-amd64.tar.gz && echo 'export PATH=$PATH:/usr/local/go/bin' >> ~/.bashrc && source ~/.bashrc && go version && git clone https://github.com/apptainer/singularity.git && cd singularity && git checkout master && ./mconfig && make -C builddir && sudo make -C builddir install && singularity --version
