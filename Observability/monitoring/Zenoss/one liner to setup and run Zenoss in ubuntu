sudo apt-get update && sudo apt-get install -y wget && wget --no-check-certificate https://raw.githubusercontent.com/hydruid/zenoss/master/core-autodeploy/4.2.5/zo425_ubuntu-debian.sh && sudo chmod +x zo425_ubuntu-debian.sh && sudo ./zo425_ubuntu-debian.sh 2>&1 | tee zenoss_install_log.txt && sudo service zenoss start && sudo service zenoss status && echo "Zenoss Core is accessible at http://$(hostname -I | awk '{print $1}'):8080"
