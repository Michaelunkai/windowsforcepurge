sudo apt install cmake make gcc g++ flex bison libpcap-dev libssl-dev python3-dev swig zlib1g-dev software-properties-common wget -y && wget https://download.zeek.org/zeek-4.2.2.tar.gz && tar -xzf zeek-4.2.2.tar.gz && cd zeek-4.2.2 && ./configure && make && sudo make install && sudo sed -i 's/interface=.*/interface=eth0/' /usr/local/zeek/etc/node.cfg && sudo /usr/local/zeek/bin/zeekctl deploy
