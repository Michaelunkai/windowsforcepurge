sudo apt-get install -y curl && curl -s https://raw.githubusercontent.com/logzio/public-certificates/master/CA/COMODORSADomainValidationSecureServerCA.crt --output /usr/local/share/ca-certificates/COMODORSADomainValidationSecureServerCA.crt && update-ca-certificates && apt-get install -y rsyslog && echo "*.* @<<logzio_listener_hostname>>:5015;RSYSLOG_SyslogProtocol23Format" | sudo tee -a /etc/rsyslog.conf && sudo systemctl restart rsyslog && sudo systemctl start rsyslog && sudo systemctl status rsyslog
