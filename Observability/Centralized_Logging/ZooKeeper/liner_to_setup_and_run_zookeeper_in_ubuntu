cd && wget https://archive.apache.org/dist/zookeeper/zookeeper-3.6.1/apache-zookeeper-3.6.1-bin.tar.gz && tar -xzf apache-zookeeper-3.6.1-bin.tar.gz && mv apache-zookeeper-3.6.1-bin zookeeper && mkdir zookeeper/data && cp zookeeper/conf/zoo_sample.cfg zookeeper/conf/zoo.cfg && echo -e "tickTime=2000\ninitLimit=10\nsyncLimit=5\ndataDir=$(pwd)/zookeeper/data\nclientPort=2181" > zookeeper/conf/zoo.cfg && zookeeper/bin/zkServer.sh start && zookeeper/bin/zkCli.sh
