create one liner, to setup and run sqlpackage in ubuntu, and use it in the end! && wget https://aka.ms/sqlpackage-linux -O sqlpackage.zip && unzip sqlpackage.zip -d /opt/sqlpackage && chmod +x /opt/sqlpackage/sqlpackage && echo 'export PATH="$PATH:/opt/sqlpackage"' >> ~/.bashrc && source ~/.bashrc && sqlpackage
