cd && [ ! -f zotero.tar.bz2 ] && wget "https://www.zotero.org/download/client/dl?channel=release&platform=linux-x86_64&version=7.0.5" -O zotero.tar.bz2 && tar -xjf zotero.tar.bz2 && [ ! -d /opt/zotero ] && sudo mv Zotero_linux-x86_64 /opt/zotero && [ ! -L /usr/bin/zotero ] && sudo ln -s /opt/zotero/zotero /usr/bin/zotero; mkdir -p ~/.local/share/applications && echo -e '[Desktop Entry]\nVersion=1.0\nName=Zotero\nComment=Open-source reference manager\nExec=/opt/zotero/zotero\nIcon=/opt/zotero/chrome/icons/default/default256.png\nTerminal=false\nType=Application\nCategories=Office;Education;' > ~/.local/share/applications/zotero.desktop && chmod +x ~/.local/share/applications/zotero.desktop && /opt/zotero/zotero
