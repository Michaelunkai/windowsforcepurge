sudo apt-get install -y openjdk-11-jdk && wget https://archive.apache.org/dist/hbase/2.4.17/hbase-2.4.17-bin.tar.gz && tar -xzf hbase-2.4.17-bin.tar.gz && mv hbase-2.4.17 /usr/local/hbase && echo 'export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64' >> ~/.bashrc && echo 'export HBASE_HOME=/usr/local/hbase' >> ~/.bashrc && echo 'export PATH=$PATH:$HBASE_HOME/bin' >> ~/.bashrc && source ~/.bashrc && cp /usr/local/hbase/conf/hbase-env.sh /usr/local/hbase/conf/hbase-env.sh.bak && sed -i 's|# export JAVA_HOME=.*|export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64|' /usr/local/hbase/conf/hbase-env.sh && /usr/local/hbase/bin/start-hbase.sh
